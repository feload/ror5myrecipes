<%= render 'shared/errors', item: @recipe %>
<div class="row">
  <div class="col-md-12">
    <%= form_for(@recipe, :html => { class: "form-horizontal", role: "form" }) do |form| %>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= form.label :name %>
        </div>
        <div class="col-md-8">
          <%= form.text_field :name, class: "form-control", placeholder: "Name of recipe", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= form.label :description %>
        </div>
        <div class="col-md-8">
          <%= form.text_area :description, rows: 10, class: "form-control", placeholder: "Enter steps to create recipe" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-2">
          <%= form.submit class: "btn btn-primary btn-lg" %>&nbsp;&nbsp;
          <%= link_to "Cancel", recipes_path, class: "btn btn-danger btn-lg" %>
        </div>
      </div>
    <% end %>
  </div>
</div>